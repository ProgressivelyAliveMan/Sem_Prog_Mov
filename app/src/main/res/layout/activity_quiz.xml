<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <TextView
        android:id="@+id/pregunta_numero"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pregunta 1/6"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/pregunta_texto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/pregunta_numero"
        android:layout_marginTop="24dp"
        android:text="¿Cuál es el ave nacional de Panamá?"
        android:textSize="22sp"
        android:textAlignment="center"/>

    <RadioGroup
        android:id="@+id/opciones_radio_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/pregunta_texto"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp">

        <RadioButton
            android:id="@+id/opcion1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Opción A"
            android:textSize="18sp"/>
        <RadioButton
            android:id="@+id/opcion2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Opción B"
            android:textSize="18sp"/>
        <RadioButton
            android:id="@+id/opcion3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Opción C"
            android:textSize="18sp"/>
    </RadioGroup>

    <Button
        android:id="@+id/boton_verificar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/opciones_radio_group"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:text="Verificar Respuesta"/>

    <Button
        android:id="@+id/boton_siguiente_pantalla"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="Ir a la Pantalla de Sensores"/>

</RelativeLayout>